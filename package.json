{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "format": "prettier --write 'resources/**/*.{css,js,vue}'",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "dependencies": {
        "autoprefixer": "^10.2.4",
        "axios": "^0.22.0",
        "cross-env": "^7.0.3",
        "dayjs": "^1.10.4",
        "laravel-mix": "^6.0.11",
        "lodash": "^4.17.20",
        "portal-vue": "^2.1.7",
        "postcss": "^8.1.14",
        "postcss-import": "^14.0.0",
        "resolve-url-loader": "^4.0.0",
        "tailwindcss": "^2.0.1",
        "tippy.js": "^6.2.7",
        "v-clipboard": "^2.2.3",
        "vue": "^2.6.12",
        "vue-good-table": "^2.21.3",
        "vue-loader": "^15.9.6",
        "vue-multiselect": "^2.1.6",
        "vue-notification": "^1.3.20",
        "vue-template-compiler": "^2.6.12",
        "vuedraggable": "^2.24.2"
    },
    "devDependencies": {
        "css-loader": "^5.2.7",
        "husky": "^7.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.2.1"
    },
    "lint-staged": {
        "*.{css,js,vue}": [
            "prettier --write"
        ],
        "*.php": [
            "composer format"
        ]
    }
}
